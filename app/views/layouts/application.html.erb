<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title><%= content_for?(:title) ? yield(:title) : "黃祺庸" %></title>

    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "vendor/modernizr" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>

  <body>

    <%= yield %>
    <script type="text/javascript">
    $(document).ready(function(){
      var controller = $.superscrollorama({
            triggerAtCenter: false,
            playoutAnimations: true
          });
      controller.pin($('.cv'), 1300, {
          anim: (new TimelineLite())
            .append(
              TweenMax.fromTo($('#cv-title'), 1, 
                {css:{left: 0, top:-750}, immediateRender:true}, 
                {css:{left:0, top: 0}}),
              -10)
            .append(
              TweenMax.fromTo($('#cv-arrow'), 2, 
                {css:{left: -1280, top:300}, immediateRender:true}, 
                {css:{left:0, top: 300}}),
              -9)
            .append(
              TweenMax.fromTo($('#09'),2,{css:{top:-100,opacity:0},immediateRender:true},{css:{opacity:1}}))
            .append(
              TweenMax.fromTo($('#10'),2,{css:{top:-100,opacity:0},immediateRender:true},{css:{opacity:1}}))
            .append(
              TweenMax.fromTo($('#11'),2,{css:{top:-100,opacity:0},immediateRender:true},{css:{opacity:1}}))
            .append(
              TweenMax.fromTo($('#12'),2,{css:{top:-100,opacity:0},immediateRender:true},{css:{opacity:1}}))
            .append(
              TweenMax.fromTo($('#13'),2,{css:{top:-100,opacity:0},immediateRender:true},{css:{opacity:1}}))
            .append(
              TweenMax.fromTo($('#goes_on h2'),2,{css:{top:-100,opacity:0},immediateRender:true},{css:{opacity:1}}))
          });
      controller.pin($('.coding'),650,{
        anim: (new TimelineLite())
            .append(
              TweenMax.fromTo($('#coding-title'), 0.5, 
                {css:{opacity:0}, immediateRender:true}, 
                {css:{opacity:1}},1))
            .append(
              TweenMax.fromTo($('#coding-intro'),0.5,{css:{opacity:0}, immediateRender:true}, 
                {css:{opacity:1}},1))
            .append(
              TweenMax.fromTo($('#octocard'),0.5,{css:{opacity:0}, immediateRender:true}, 
                {css:{opacity:1}},1))
            .append(
              TweenMax.fromTo($('.portofolio'),0.5,{css:{opacity:0}, immediateRender:true}, 
                {css:{opacity:1}},1))
          })
          })
    </script>
    <script>
      OCTOCARD = {
      name: 'jeffrey410469',
      element: 'octocard',
      reposIgnored: 'reponame1,reponame2',};
    </script>
    <script>
      $(window).scroll(function() {
        $('.portofolio').each(function(){
        var imagePos = $(this).offset().top;

        var topOfWindow = $(window).scrollTop();
          if (imagePos < topOfWindow+400) {
            $(this).addClass("pulse");
          }
        });
      });
    </script>
    </script>
<script src="http://nodejs.in/octocard/bin/octocard.js"></script>
  </body>
</html>